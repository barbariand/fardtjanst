{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install and run all Servers",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Install needed components",
                "Run all servers"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run all servers",
            "dependsOrder": "sequence",
            "dependsOn": [
                "StartServer",
                "StartFrontend",
                "StartMockserver"
            ]
        },
        {
            "label": "Install needed components",
            "linux": {
                "command": "${command:multiCommand.InitProjektLinux}"
            },
            "command": "${command:multiCommand.InitProjektWindows}"
        },
        {
            "label": "StartServer",
            "command": "${command:multiCommand.StartServer}"
        },
        {
            "label": "StartMockserver",
            "command": "${command:multiCommand.StartMockserver}"
        },
        {
            "label": "StartFrontend",
            "command": "${command:multiCommand.StartFrontend}"
        }
    ],
}